<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Sim"
        xmlns:Model="clr-namespace:Model;assembly=Model" x:Class="WPF_Sim.CompetitionStats"
        mc:Ignorable="d"
        Title="CompetitionStats" Height="450" Width="800">
    <Window.DataContext>
        <local:Data_Context/>
    </Window.DataContext>
    <Grid Background="#FF525252">

        <Label x:Name="_trackName" Content="{Binding TrackName}" HorizontalAlignment="Left" Margin="114,30,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label x:Name="_lastLaptime" Content="{Binding LastLaptime}" HorizontalAlignment="Left" Margin="122,48,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label Content="Current track: " HorizontalAlignment="Left" Margin="8,30,0,0" VerticalAlignment="Top" FontWeight="Bold" Foreground="White"/>
        <Label Content="Last laptime: " HorizontalAlignment="Left" Margin="10,48,0,0" VerticalAlignment="Top" Foreground="White" FontWeight="Bold"/>
    </Grid>
</Window>
